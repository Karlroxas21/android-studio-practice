<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="520dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="60dp"
        android:id="@+id/relativeInput">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:layout_marginTop="50dp"
            android:id="@+id/inputName"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Age"
            android:layout_below="@id/inputName"
            android:layout_marginTop="25dp"
            android:id="@+id/inputAge"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Phone number"
            android:layout_below="@id/inputAge"
            android:layout_marginTop="25dp"
            android:id="@+id/inputNum"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Email"
            android:layout_below="@id/inputNum"
            android:layout_marginTop="25dp"
            android:id="@+id/inputEmail"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Course"
            android:layout_below="@id/inputEmail"
            android:layout_marginTop="25dp"
            android:id="@+id/inputCourse"/>
        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="City"
            android:layout_below="@id/inputCourse"
            android:layout_marginTop="25dp"
            android:id="@+id/inputCity"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/inputCity"
            android:layout_marginTop="25dp"
            android:text="SEND"
            android:id="@+id/send"/>

</RelativeLayout>
    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="520dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="30dp"
        android:id="@+id/relativeOutput"
        android:layout_toRightOf="@+id/relativeInput">

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Output name"
            android:layout_marginTop="50dp"
            android:id="@+id/outputName"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Output age"
            android:layout_below="@id/outputName"
            android:layout_marginTop="55dp"
            android:id="@+id/outputAge"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Output P umber"
            android:layout_below="@id/outputAge"
            android:layout_marginTop="50dp"
            android:id="@+id/outputNum"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Output email"
            android:layout_below="@id/outputNum"
            android:layout_marginTop="50dp"
            android:id="@+id/outputEmail"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Output course"
            android:layout_below="@id/outputEmail"
            android:layout_marginTop="50dp"
            android:id="@+id/outputCourse"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:hint="Output city"
            android:layout_below="@id/outputCourse"
            android:layout_marginTop="50dp"
            android:id="@+id/outputCity"/>
    </RelativeLayout>






</RelativeLayout>