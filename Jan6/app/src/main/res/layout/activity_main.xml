<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:hint="Enter name"
        android:minWidth="200dp"
         />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTxt2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter age"
        android:layout_below="@id/editTxt"
        android:minWidth="200dp"/>

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTxt3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:hint="Enter course"
        android:layout_below="@id/editTxt2"
        android:minWidth="200dp"/>


    <Button
        android:id="@+id/btnCopy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editTxt3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="COPY" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnCopy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/txtView"
        android:hint="Output here"
        android:textSize="20dp"
        android:gravity="center"
        android:textAlignment="center"/>


</RelativeLayout>





